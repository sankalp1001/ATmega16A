//slave
#define F_CPU 1000000UL
#include <avr/io.h>
#include <util/delay.h>


unsigned char datatransf(unsigned char data)
{
	SPDR =data;
	while(!(SPSR & (1<<SPIF)));
	return SPDR;
}

int main(void)
{
	DDRB = (1<<PINB6); 
	SPCR = (1<<SPE); 
	
	DDRC=0xFF; 
	DDRA =0x00;
	 
	unsigned char DataIn;
	unsigned char DataOut;
	
	while (1)
	{
		
		if(PINA & (1<<PINA0))
		{
			DataOut=0xA0;
		}
		else
		{
			DataOut=0x00;
		}
		
		DataIn=0x00;
		DataIn=datatransf(DataOut);
		
		if (DataIn == 0xFF)
		{
			PORTC = 0xFF;
		}

		else
		{
			PORTC = 0x00;
			
		}
		
	}
}
